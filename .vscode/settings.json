{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "node_modules/[^.j]*": true,
    "node_modules/[^.][^s]*": true,
    "node_modules/[^.]?[^c]*": true
  },
  "eslint.validate": [
    "json"
  ],
  "yaml.schemas": {
    "https://json.schemastore.org/github-workflow.json": [
      ".github/workflows/deploy.yml"
    ],
  }
}
